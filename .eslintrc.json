{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "@next/next/no-img-element": "off",
    "@typescript-eslint/no-unused-vars": "off", // Globally disables this rule
    "no-var": "error" // Enforce using let or const globally
  },
  "overrides": [
    {
      "files": ["src/db/index.ts"], // Target a specific file
      "rules": {
        "no-var": "off" // Disable the 'no-var' rule only for this file
      }
    }
  ]
}
